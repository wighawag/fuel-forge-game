layout {
	pane split_direction="vertical" {
		pane name="web" command="pnpm"  {
			args "web:dev"
		}
		pane name="svelte-check" command="pnpm"  {
			args "--filter" "./web" "check:watch"
		}
	}

	pane split_direction="vertical" {
        pane name="onchain" command="pnpm"  {
			args "onchain:node"
		}
		pane name="onchain" command="pnpm"  {
			args "onchain:contracts:dev"
		}
	}
	pane split_direction="vertical" {
		pane name="onchain:test" command="pnpm"  {
			args "onchain:test"
		}
	}
}